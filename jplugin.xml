    <files>
        <filename plugin="jplugin">jplugin.php</filename>
        <filename>index.html</filename>
        <folder>language</folder>
    </files>
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.jplugin.ini</language>
